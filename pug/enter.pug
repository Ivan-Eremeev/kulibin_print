block content

	.page

		include blocks/header_login.pug
		
		.content
			
			// login
			.login
				.container
					.login__block
						.login__buttons 
							.login__buttons-row
								.login__btn
									a(href="#").btn.btn--gray Вход
								.login__btn
									a(href="#").btn.btn--black Регистрация
						.login__title Войти в профиль
						.login__text Пожалуйста, введите свой e-mail и пароль для входа в личный кабинет пользователя.
						form(action="#").login__form
							.input.input--label 
								input(type="text")
								.input__label Ваш e-mail адрес
							.input.input--password
								input(type="password" placeholder="Пароль")
								.input__icon 
									svg(width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg")
										g
											path(d="M4.5 8C7.5 14.5 16.5 14.5 19.5 8" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
											path(d="M16.8164 11.3174L19.5002 14.9999" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
											path(d="M12 12.875V16.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
											path(d="M7.18383 11.3174L4.5 14.9999" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
							.login__row 
								.login__checkboxblock 
									input#checkRemember(type="checkbox")
									label(for="checkRemember").login__checkbox 
										svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
											path(fill-rule="evenodd" clip-rule="evenodd" d="M15.0362 4.76351C15.2049 4.93228 15.2997 5.16116 15.2997 5.39981C15.2997 5.63846 15.2049 5.86733 15.0362 6.03611L7.83618 13.2361C7.6674 13.4048 7.43853 13.4996 7.19988 13.4996C6.96123 13.4996 6.73235 13.4048 6.56358 13.2361L2.96358 9.63611C2.79964 9.46637 2.70892 9.23902 2.71097 9.00305C2.71302 8.76707 2.80767 8.54134 2.97454 8.37447C3.14141 8.2076 3.36714 8.11295 3.60312 8.1109C3.83909 8.10885 4.06644 8.19957 4.23618 8.36351L7.19988 11.3272L13.7636 4.76351C13.9324 4.59478 14.1612 4.5 14.3999 4.5C14.6385 4.5 14.8674 4.59478 15.0362 4.76351Z" fill="#D83A56")
									label(for="checkRemember") Запомнить меня
								a(href="#").login__link Забыли пароль?
